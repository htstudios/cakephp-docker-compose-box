# @since   1.0.0
####################################################################################
project=$(pwd);
cd "$(dirname "$0")" \
    && echo "• Clearing application/http directory..." \
    && cd ../application/http && find . -delete \
    && echo "• Installing CakePHP app akeleton..." \
    && cd ../.. && bin/composer create-project --prefer-dist --no-interaction cakephp/app application/http "$@" \
    && cp ./application/setup/http/webroot/phpinfo.php ./application/http/webroot/phpinfo.php \
    && cp ./application/setup/docker-cake.code-workspace ./application/docker-cake.code-workspace \
    && echo "• Starting Docker server..." \
    && bin/boot \
    && echo "• Opening Visual Studio Code project..." \
	&& cd ./application \
	&& open docker-cake.code-workspace \
;
